@model MvcProject.Models.ShortUrls.CreateShortUrl

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3 my-3 border" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  background: lightgrey;
  border-radius: 5px;" >
    <h1> Create short URL</h1>

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OriginalUrl" class="control-label"></label>
                    <input asp-for="OriginalUrl" class="form-control" autofocus/>
                    <span asp-validation-for="OriginalUrl" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 5px">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Dashboard">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}